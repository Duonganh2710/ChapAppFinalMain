<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:layout_gravity="center"
    android:background="@drawable/background_color"
    tools:context=".Activity.MainApp.LoginActivity">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintVertical_bias="0.05"
        android:id="@+id/animation"
        app:lottie_loop="true"
        app:lottie_fileName="chat_logo.json"
        app:lottie_autoPlay="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0.4"
        app:cardCornerRadius="30sp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/img_email"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_emai"
            android:padding="10dp"
            android:background="@color/main_color"/>
        <EditText
            android:id="@+id/ext_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="40"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0.55"
        app:cardCornerRadius="30sp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/img_password"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_lock"
            android:padding="10dp"
            android:background="@color/main_color"/>
        <EditText
            android:id="@+id/ext_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="40"
            android:inputType="textPassword"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/submitbutton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0.85"
        android:text="@string/to_login"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/background_properties"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintVertical_bias="1"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_to_register"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Register"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>