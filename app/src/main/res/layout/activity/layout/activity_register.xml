<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:layout_gravity="center"
    android:background="@drawable/background_color"
    tools:context=".Activity.MainApp.RegisterActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.28"
        app:layout_constraintVertical_bias="0.04"
        android:layout_marginTop="4dp"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_fileName="chat_logo.json"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.28"
        app:layout_constraintVertical_bias="0.04"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0.4"
        app:cardCornerRadius="30sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/img_user"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user"
                android:padding="10dp"
                android:background="@color/main_color"/>
            <EditText
                android:id="@+id/ext_user_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="40"
                android:hint="@string/hint_name"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"/>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0.55"
        app:cardCornerRadius="30sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/img_email"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_emai"
                android:padding="10dp"
                android:background="@color/main_color"/>
            <EditText
                android:id="@+id/ext_email_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="40"
                android:hint="@string/hint_email"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"/>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0.7"
        app:cardCornerRadius="30sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/img_password"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_lock"
                android:padding="10dp"
                android:background="@color/main_color"/>
            <EditText
                android:id="@+id/ext_password_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="40"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"/>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_phone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0.85"
        app:cardCornerRadius="30sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_local_phone_24"
                android:padding="10dp"
                android:background="@color/main_color"/>
            <EditText
                android:id="@+id/ext_phone_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="40"
                android:hint="Enter your phone number"
                android:inputType="phone"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"/>
        </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/but_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0.95"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:background="@drawable/background_properties"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_to_register"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/to_login"
            android:textSize="20sp"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>