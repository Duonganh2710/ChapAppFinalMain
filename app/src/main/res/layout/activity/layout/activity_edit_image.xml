<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/root_view"
    tools:context=".Activity.EditImage.EditImageActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/but_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"
            android:layout_margin="2dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="@string/edit_image_Layout_title"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:textSize="20sp"
           android:gravity="center"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/but_check"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_check"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"
            android:layout_margin="2dp"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/photo_edit_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:transitionName="photoEdit"/>

    <LinearLayout
        android:id="@+id/layout_tool"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:visibility="visible">
        <ImageView
            android:id="@+id/but_brush"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:src="@drawable/ic_brush"
            android:padding="15dp"/>
        <ImageView
            android:id="@+id/but_eraser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:src="@drawable/ic_eraser"
            android:padding="15dp"/>
        <ImageView
            android:id="@+id/but_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:src="@drawable/ic_text"
            android:padding="15dp"/>
        <ImageView
            android:id="@+id/but_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:src="@drawable/ic_photo_filter"
            android:padding="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_filter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_filter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="48dp"
            android:background="#272626"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_image_filter"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_close_filter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            android:src="@drawable/ic_close"
            android:layout_margin="5dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>