<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_photo_in_mobile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="ImageGallery"
        app:riv_corner_radius="5dp"
        app:riv_border_width="1dp"
        app:riv_border_color="@color/main_color"
        android:elevation="2dp"/>
    <ProgressBar
        android:id="@+id/pb_load_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="@id/img_photo_in_mobile"
        app:layout_constraintLeft_toLeftOf="@id/img_photo_in_mobile"
        app:layout_constraintRight_toRightOf="@id/img_photo_in_mobile"/>

</androidx.constraintlayout.widget.ConstraintLayout>