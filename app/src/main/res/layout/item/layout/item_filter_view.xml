<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_filter_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txt_filter_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Filter"
        android:textSize="8dp"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toBottomOf="@id/img_filter_view"
        app:layout_constraintStart_toStartOf="@id/img_filter_view"
        app:layout_constraintEnd_toEndOf="@id/img_filter_view"/>


</androidx.constraintlayout.widget.ConstraintLayout>